/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: top;

  padding: 10rpx;
  box-sizing: border-box;
} 
.tab-bar{
  position: fixed; bottom: 0;
  width: 100%;
}

.clearfix:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}