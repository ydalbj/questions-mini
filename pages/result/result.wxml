
<view class="container result-section">
  <view class="dati_top"></view>
  <view class="result-basic">
    <view class="result-title">测评结果</view>
    <view class="evaluations-section">
      <block wx:for="{{evaluations}}">
        <view class="evaluation-area">
          <view class="evaluation-header">
            <icon type="success_no_circle" size="10"></icon>
            <text class="group-name">{{item.group_name}}</text>
            <text class="evaluation-score">{{item.score}}分</text>
          </view>
          <view class="evaluation-content">
            <block wx:if="{{item.level_standard !== undefined}}">
                有<text wx:if="{{item.level_standard < 2}}">轻</text>
                 <text wx:elif="{{item.level_standard >= 2 && item.level_standard <=4}}">中</text>
                 <text wx:else="{{item.level_standard > 4}}">重</text>度{{item.group_name}} 倾向
            </block>
            <block wx:if="{{item.age_standard !== undefined }}">
                  目前达到 <text class="evaluation-age">{{item.age_formatted}}</text> 标准
            </block>
          </view>
        </view>
      </block>
      <view class="evaluation-summary">
        <view>综合得分：<text class="evaluation-score">{{score}}</text></view>
        <view>非医疗机构，供参考使用</view>
      </view>
    </view>
    
  </view>
  <view class="tab-bar">
      <i-tab-bar current="{{ current_tab }}" color="#f759ab" bindchange="handleTabChange">
        <i-tab-bar-item key="homepage" icon="homepage" current-icon="homepage_fill" title="首页"></i-tab-bar-item>

        <i-tab-bar-item key="result" icon="mine" current-icon="mine_fill" title="查看结果"></i-tab-bar-item>
      </i-tab-bar>
    </view>
</view>

<i-toast id="toast" />